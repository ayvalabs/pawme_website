
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'pawme@ayvalabs.com';
    }

    // Rules for the 'users' collection
    match /users/{userId} {

      // Any authenticated user can read public user data for leaderboards and referrals.
      // Admin can read all user data.
      allow read: if request.auth != null;

      // New users can create their own user document upon signup.
      // The document ID must match the user's UID.
      allow create: if request.auth != null && request.auth.uid == userId;

      // Users can update their own document or referral updates
      // Admin can update any user document
      allow update: if
        // Admin has full update access
        isAdmin() ||
        
        // Allow a user to update their own document (theme, profile, etc.)
        (request.auth != null && request.auth.uid == userId) ||

        // Allow a new signup to credit their referrer.
        // This is scoped to only allow incrementing points and referral count by the correct amounts.
        (
          request.auth != null &&
          request.resource.data.diff(resource.data).affectedKeys().hasAll(['points', 'referralCount']) &&
          request.resource.data.diff(resource.data).affectedKeys().size() == 2 &&
          request.resource.data.referralCount == resource.data.referralCount + 1 &&
          (
            request.resource.data.points == resource.data.points + 100 ||
            request.resource.data.points == resource.data.points + 150
          )
        );
    }
    
    // Rules for email templates
    match /email_templates/{templateId} {
      allow read, write: if isAdmin();
    }
  }
}
