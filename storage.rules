rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'pawme@ayvalabs.com';
    }

    // Public read access for reward images
    match /rewards/{allPaths=**} {
      allow read;
      // Allow write only for admin users
      allow write: if isAdmin();
    }
  }
}
